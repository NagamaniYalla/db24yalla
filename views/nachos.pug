extends layout

block content
  h1= title
  - let items = results
  p Search results Nachos 
  p 
  div(class="container-fluid")
        div(class="row")
            each v,index in items 
                div(class="card text-white bg-dark mb-3" class='col' class='card' class='card-body' class='card-text' onclick='buy('+index+')') #{o}  
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.flavour}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.taste}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
                a(href="nachos/update/?id="+v.id) Update
                a(href="nachos/detail/?id="+v.id) View
                a(href="nachos/delete/?id="+v.id) Delete
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }
  